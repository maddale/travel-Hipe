<div class="post">
    <div class="post-head">
       <%= render partial: 'shared/tags', object: @post, as: "post" %>

       <%= @post.post_img? ? image_tag(@post.post_img.url) : image_tag("/assets/post_head.jpg") %>
      <div class="img-footer">
         <div class="img-footer-left"><h4><strong><%= @post.title %></strong></h4></div>
         <div class="img-footer-right"><i><p><small>created <%= @post.created_at.strftime("%d-%B-%Y") %></small></p><p>by <strong><%= @post.user.name %></strong></p></i>
         </div>
      </div>
    </div> <!-- /imagefooter -->
     
    <div class="post-body">
      <p class="mb-0"><%= @post.body %></p>
    </div>
     
    <p class="text-secondary">Edit post</p>
  </div>
