<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <h4>Please, fix the following errors and resend form</h4>
    </div>  

      <ul >
        <% @user.errors.full_messages.each do |error| %>
          <li> *<%= error %></li>
        <% end %>
      </ul>

  </div>
<% end  %>