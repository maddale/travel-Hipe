 	
    
    <div id="accordion" role="tablist">
      <div class="card">
        <div class="card-header" role="tab" id="headingOne">
        <h5 class="mb-0">
        <a data-toggle="collapse" href="#collapseOne" role="button" aria-expanded="true" aria-controls="collapseOne">
          Create a new post</a></h5>
        </div>

    <div id="collapseOne" class="collapse<%= " show" if @post.errors.any? %>" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body">
        <div class="post-form">
<%= form_for [current_user, @post] do |f| %>
                <%= render 'shared/forms_errors', object: @post %>        
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, :class=>"form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, :class=>"form-control" %>
              </div>
                
                <%= f.submit 'New post', class: "btn btn-large btn-success"  %>
<% end %>



      </div>
    </div>
  </div>
</div>
    </div>

    <%= render @posts %>
 
    
