<% if params[:action] == "edit_avatar" %>
  <%= render "edit_avatar" %>
<% end %>

<% if params[:action] == "update_avatar" %>
  <%= render "resize_avatar" %>
<% end %>


<div class="row">
<%= render 'shared/user_side' %>
    
  

  	
  <div class="col-7">
    
    <div id="accordion" role="tablist">
      <div class="card">
        <div class="card-header" role="tab" id="headingOne">
        <h5 class="mb-0">
        <a data-toggle="collapse" href="#collapseOne" role="button" aria-expanded="true" aria-controls="collapseOne">
          Create a new post</a></h5>
        </div>

    <div id="collapseOne" class="collapse<%= " show" if @post.errors.any? %>" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body">
        <div class="post-form">
 <%= form_for [current_user, @post] do |f| %>
                <%= render 'shared/forms_errors', object: @post %>        
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, :class=>"form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, :class=>"form-control" %>
              </div>
                
                <%= f.submit 'New post', class: "btn btn-large btn-success"  %>
                <% end %>



      </div>
    </div>
  </div>
</div>
    </div>

    <%= render @posts %>
 </div><!--/col7-->
 
    
<div class="col-2">
  <div class="list-group">
  <% @categories.each do |category| %>
  <%= link_to category.name, user_category_path(current_user, category), class: "list-group-item list-group-item-action" %>
  <% end %>
</div>
</div>
</div><!--/row-->